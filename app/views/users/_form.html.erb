<% if @user.errors.any? %>
	<ul>
		<% @user.errors.full_messages.each do |message| %>

			 <li><%= message %></li>

		<% end %>
	</ul>

<% end %>


<%= form_for @user, class: 'sign-up-form', :html => { :multipart => true } do |f| %>
    <h1>Sign Up!</h1>
	<%= f.text_field :fname, placeholder: "First Name" %><br />
	<%= f.text_field :lname, placeholder: "Last Name" %><br />
	<%= f.email_field :email, placeholder: "Email"  %><br />
	<%= f.text_field :gender, placeholder: "Gender" %><br />
	<%= f.text_field :preference, placeholder: "Interested In" %><br />
	<%= f.text_area :bio, placeholder: "Bio"  %><br />
	<%= f.password_field :password, placeholder: "Password"%><br />
    <%= f.file_field :avatar %> <br>
    <%= f.submit :class => 'formbuttons'%> <br/>
    <%= link_to 'Back', :back, remote: true, class: 'back-button'%>
    <% end %>

<br />
