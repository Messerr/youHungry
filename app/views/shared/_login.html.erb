<% if current_user %>
	<p>Hello <%= current_user.fname %> | 
		<%= link_to 'sign out', logout_path %>
			| 
	</p>
<% else %>

	<%= form_tag(signin_path, method: :post) do %>
        <h1>Log In</h1>
		<%= label_tag %>
		<%= email_field_tag :email, nil, placeholder: 'Email' %>
		<br>
		<%= label_tag %>
		<%= password_field_tag :password, nil, placeholder: 'Password' %>
		<br>
		<%= link_to "Sign up", new_user_path, data: {formredirect: true, remote: true } %>
		<%= submit_tag "login" %>

		
	<% end %>
<% end %>