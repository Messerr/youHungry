

	<%= form_tag(signin_path, method: :post, class:'login-box') do %>
        <h1>Log In</h1>
        <%= flash[:alert] if flash[:alert]%><br/>
		<%= label_tag %>
		<%= email_field_tag :email, nil, placeholder: 'Email' %>
		<br>
		<%= label_tag %>
		<%= password_field_tag :password, nil, placeholder: 'Password' %>
		<br>
		<%= link_to "Sign up", new_user_path, remote: true, class: 'buttonStyle', id: 'sign-up-link' %>
		<%= submit_tag "Login", class: 'buttonStyle' %>

<% end %>